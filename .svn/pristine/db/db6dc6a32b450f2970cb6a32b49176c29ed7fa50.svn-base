<%@ page language="java" import="java.util.*" pageEncoding="UTF-8"%>
<%
	String path = request.getContextPath();
	String basePath = request.getScheme() + "://"
			+ request.getServerName() + ":" + request.getServerPort()
			+ path + "/";
	pageContext.setAttribute("base", basePath);
	String flag = request.getParameter("flag");
%>
<%@ taglib uri="/WEB-INF/tld/security.tld" prefix="sec"%>
<%@ taglib uri="/struts-tags" prefix="s"%>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
<meta http-equiv="content-type" content="text/html; charset=UTF-8" />
<title>发起进度</title>
<script src="${base}template/miniui/boot.js" type="text/javascript"></script>
<script src="../template/plugin/public/add.js" type="text/javascript"></script>
<!--引入皮肤样式-->
<link href="../template/miniui/themes/blue/skin.css" rel="stylesheet"
	type="text/css" />
<link href="../template/plugin/public/css/tablepub.css" rel="stylesheet"
	type="text/css" />
<link href="../template/system/css/base.css" rel="stylesheet"
	type="text/css" />
<style type="text/css">
html, body {
	font-size: 12px;
	padding: 0;
	margin: 0;
	border: 0;
	height: 100%;
	overflow: hidden;
}
</style>
</head>
<body>
	<div id="form1">
		<div> 
			<input class="mini-hidden" name="type" id="type" value="${type}" style="display:none;" />   
			<input class="mini-hidden" name="id" id="id" value="${id}" style="display:none;" />   
			<table cellpadding="0" cellspacing="0" border="0" class="addtable" width="90%" align="center">
				<tr>
					<td align="left" colspan="4">&nbsp;</td>
				</tr>
				<tr>
					<td align="left" class="list_left_box1" height="20px" width="150px"><b>选择发起进度：</b></td>
					<td align="left" class="list_left_box1" colspan="3"></td>
				</tr>
				<tr>
                    <td class="list_left_box1">发起进度：</td>
					<td align="left" class="list_left_box1" colspan="3"> 
                        <input field="userid" name="userid" id="userid" required="true" 
							class="mini-combobox" textField="text" valueField="id" emptyText=""  
							width="450px" value="" url="../system/work_flow!getDataByPId.action?pid=${pid}"/>
                    </td>
				</tr>
			</table>
		</div>
		<div class="mini-toolbar"
			style="text-align:center;padding-top:8px;padding-bottom:8px;position: fixed;bottom: 0;width: 100%;"
			borderStyle="border:0;">
			<a class="mini-button" id="ok" onclick="onOk" style="width:60px;margin-right:20px;" iconCls="icon-save">保存</a> 
			<a class="mini-button" onclick="onCancel" style="width:60px;" iconCls="icon-close">关闭</a> &nbsp; 
		</div>
	</div>
<script type="text/javascript">
	mini.parse();
	
	function onOk() {
		var form = new mini.Form("form1");
		var data = form.getData();
		form.validate();
		if (form.isValid() == false)
			return;
		var ttp=mini.get("type").getValue();
		var id=mini.get("id").getValue(); 
		var userid=mini.get("userid").getValue();
		var urlPath="";
		if (ttp==1){
			urlPath = "../check/evection_record!nextapp.action?id="+id+"&advid="+userid;
		} else if (ttp==2){
			urlPath = "../check/rest_record!nextapp.action?id="+id+"&advid="+userid;
		} else if (ttp==3){
			urlPath = "../check/overtime_record!nextapp.action?id="+id+"&advid="+userid;
		}
		//alert(urlPath);
		//strut令牌
		window.parent.loading();
		$.ajax({
			url : urlPath,
			type : "get",
			success : function(text) {
				window.parent.unmask();
				if (text == "success") {
					mini.showMessageBox({
						title : "提醒",
						width : 250,
						iconCls : "mini-messagebox-warning",
						buttons : [ "ok" ],
						message : "保存成功！",
						callback : function(action){
							CloseWindow("ok");
						}
					});
				} else {
					if (text.length > 0) {
						mini.alert(text);
					}
				}
			}
		});
	}
	
	function CloseWindow(action) {
        if (action == "close" && form.isChanged()) {
            if (confirm("数据被修改了，是否先保存？")) {
                return false;
            }
        }
        if (window.CloseOwnerWindow) return window.CloseOwnerWindow(action);
        else window.close();
    } 
	</script>
</body>
</html>
