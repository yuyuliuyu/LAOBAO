            map.put("name", obj[2]);
            map.put("itemsId", obj[3]);
            map.put("itemsName", obj[4]);
            map.put("formulaId", obj[5]);
            map.put("formula", obj[6]);
            map.put("xs", obj[7]);
            map.put("sx", obj[8]);
            dataList.add(map);
        }

        return dataList;
    }

