    }
    //验证节点是不是部门
    public String findDep(){
    	String msg="sucsess";
    	QxDepartment depart=this.getBeanById(QxDepartment.class, departId);
    	
    	if(depart==null||"".equals(depart)){
    		msg="error";
    	}
    	return ajax(Status.success, msg);
    }
